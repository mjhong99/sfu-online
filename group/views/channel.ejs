<body>
  <div class="channel-container">
    <div class="channel-title">
      <h5>SFU Online</h5>
    </div>
    <div class="channels">
      <h5><i class="fas fa-users"></i> Channels</h5>
    </div>
    <div class="channels-list">
      <ul class="channels-list" id = "list_channel">

      </ul>
    </div>

    <div class="block">
    </div>


    <!-- <form class="add-channels"> </form> -->
    <div class="add-channels">
      <input type="channel_name" id="channel_name" name="channel_name" class="form-control"
        placeholder="Enter Channel name" />

      <button id='btnCreate' class="btn btn-primary btn-block" onclick="create()">
        Create Channel
      </button>
    </div>

    <div>
      <script>
        const btnCreate = document.getElementById("btnCreate")
        btnCreate.addEventListener("click", async e => {
          let jsonRequest = {}
          jsonRequest.channel_name = document.getElementById("channel_name").value
          console.log("clientside:" + jsonRequest.channel_name);
          console.log("clientside:" + JSON.stringify(jsonRequest));
          let result = await fetch("http://localhost:3000/", {
            method: "POST",
            headers: { "content-type": "application/json" }, body: JSON.stringify(jsonRequest)
          })
          var ul = document.createElement("ul")
          ul.innerHTML += "<a href = users/channel_page/" + jsonRequest.channel_name +">" + jsonRequest.channel_name + "</a>"
          list_channel.appendChild(ul)

        })

        readChannels();
        async function readChannels() {
              try{
                  const list_channel = document.getElementById("list_channel")

                  let result = await fetch("http://localhost:3000/channel", {method:"GET"})
                  const channel = await result.json();
                  channel.forEach(t=>
                  {
                      console.log(t)
                      var ul = document.createElement("ul")
                      ul.innerHTML += "<a href = users/channel_page/" + t.channel_name +">" + t.channel_name + "</a>"
                      list_channel.appendChild(ul)
                  })
              }
              catch(e) {
                console.log("error");
              }
          }
      </script>
    </div>


    <div class="channel-form">
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
